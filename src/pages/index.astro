---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css'
const properties = {
	title: 'Portafolio',
	url: '/',
	images: [
		{
			url: '/img/portafolio/img7.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img9.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img4.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img3.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img6.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img1.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img8.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img5.jpg',
			alt: 'imgAlt',
		},
		{
			url: '/img/portafolio/img2.jpg',
			alt: 'imgAlt',
		},
	]
}
const {
	images,
	title,
	url,
} = properties;
---

<Layout title={title} url={url}>
	{images.map((image) => (
		<img src={image.url} alt={image.alt} />
	))}
</Layout>
<style>
	img {
		margin-bottom: 1.5rem;
	}
	@media screen and (min-width: 828px) {
		img {
			height: 21rem;
			width: auto;
			margin-right: 1.5rem;
		}
	}
</style>
